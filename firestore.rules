rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to daily finance data (for demo purposes)
    match /dailyFinanceData/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to expense templates
    match /expenseTemplates/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to salary templates
    match /salaryTemplates/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to bank expense templates
    match /bankExpenseTemplates/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to rental templates
    match /rentalTemplates/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to legacy collections
    match /records/{document} {
      allow read, write: if true;
    }
    
    match /categories/{document} {
      allow read, write: if true;
    }
    
    match /cashflow/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to user settings (cigarette products, etc.)
    match /users/{userId}/settings/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to user data collections
    match /users/{userId}/dailyFinanceData/{document} {
      allow read, write: if true;
    }
    
    match /users/{userId}/nightShiftData/{document} {
      allow read, write: if true;
    }
    
    match /users/{userId}/expenseTemplates/{document} {
      allow read, write: if true;
    }
    
    match /users/{userId}/salaryTemplates/{document} {
      allow read, write: if true;
    }
    
    match /users/{userId}/bankExpenseTemplates/{document} {
      allow read, write: if true;
    }
    
    match /users/{userId}/rentalTemplates/{document} {
      allow read, write: if true;
    }
    
    // Deny access to all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
