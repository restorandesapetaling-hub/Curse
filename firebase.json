{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      ".firebaserc",
      "firestore.rules",
      "deploy.bat",
      "deploy.ps1",
      "**/*.bat",
      "**/*.ps1",
      "**/*.cmd",
      "**/*.sh",
      "**/*.exe",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules"
  }
}
